<p id="notice"><%= notice %></p>

<h1>User Forms</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_forms.each do |user_form| %>
      <tr>
        <td><%= user_form.title %></td>
        <td><%= user_form.description %></td>
        <td><%= link_to 'Show', user_form %></td>
        <td><%= link_to 'Edit', edit_user_form_path(user_form) %></td>
        <td><%= link_to 'Destroy', user_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Web Form', new_user_form_path %>
